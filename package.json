{
  "private": true,
  "scripts": {
    "format": "prettier --write . ; sort-package-json",
    "format:check": "prettier --check . && sort-package-json --check",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,yaml,gql,md,html,css}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "prettier": "3.1.1",
    "sort-package-json": "2.6.0"
  },
  "packageManager": "pnpm@8.13.1"
}
