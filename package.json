{
  "private": true,
  "scripts": {
    "format": "prettier --write '**/*.{ts,tsx,json,yaml,gql,md,html,css}'"
  },
  "devDependencies": {
    "husky": "4.2.5",
    "lint-staged": "10.3.0",
    "prettier": "2.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json,yaml,gql,md,html,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "renovate": {
    "extends": [
      "github>ctison/renovate"
    ],
    "requiredStatusChecks": null
  }
}
